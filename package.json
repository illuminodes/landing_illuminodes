{
  "name": "HAT-stack",
  "version": "1.0.0",
  "scripts": {
    "tailwind:dev": "bunx tailwindcss -i ./src/frontend/tailwind.css -o ./public/styles/main.css --watch ./src/templates",
    "tailwind:prod": "bunx tailwindcss -i ./src/frontend/tailwind.css -o ./public/styles/prod.css --minify",
    "js:dev": "bun build --entrypoints src/js/*.js --outdir public/js --target browser --watch src/js/*.js",
    "js:prod": "bun build --entrypoints src/js/*.js --outdir public/js --target browser --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@noble/secp256k1": "^2.0.0",
    "@tailwindcss/forms": "^0.5.6",
    "bitcoinjs-lib": "^6.1.5",
    "htmx.org": "^1.9.6",
    "list.js": "^2.3.1",
    "toastify-js": "^1.12.0"
  }
}

